<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/trackLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/default_margin"
        android:focusableInTouchMode="true">

        <ImageView
            android:id="@+id/photoView"
            android:layout_width="@dimen/photo_preview_size"
            android:layout_height="@dimen/photo_preview_size"
            android:background="@drawable/ic_perm"
            android:cropToPadding="true"
            android:focusable="true"
            android:scaleType="centerCrop"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="spread_inside"/>

        <ImageButton
            android:id="@+id/takePhotoBtn"
            android:layout_width="@dimen/photo_btn_size"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_camera"
            app:layout_constraintEnd_toEndOf="@+id/photoView"
            app:layout_constraintStart_toStartOf="@+id/photoView"
            app:layout_constraintTop_toBottomOf="@+id/photoView"
            android:focusableInTouchMode="true"/>


        <EditText
            android:id="@+id/noteTxt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/min_margin"
            android:layout_marginEnd="@dimen/min_margin"
            android:layout_marginStart="@dimen/min_margin"
            android:layout_marginTop="@dimen/min_margin"
            android:ems="10"
            android:gravity="top|start"
            android:hint="@string/note_hint"
            android:inputType="textMultiLine"
            android:lines="4"
            android:maxLength="250"
            android:maxLines="4"
            android:scrollbars="vertical"
            app:layout_constraintBottom_toBottomOf="@+id/takePhotoBtn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/photoView"
            app:layout_constraintTop_toTopOf="@+id/photoView"/>


        <LinearLayout
            android:id="@+id/trackValuesLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/large_margin"
            android:layout_marginTop="@dimen/large_margin"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/takePhotoBtn">
        </LinearLayout>


    </android.support.constraint.ConstraintLayout>
</ScrollView>
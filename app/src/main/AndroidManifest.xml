<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="ru.aipova.skintracker">

    <application
        android:name=".SkinTrackerApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ui.statistics.StatisticsActivity"
            android:label="@string/app_name"/>
        <activity
            android:name=".ui.track.TrackActivity"
            android:parentActivityName=".ui.statistics.StatisticsActivity"/>
        <activity android:name=".ui.tracktype.TrackTypeActivity"/>
        <activity
            android:name=".ui.trackpager.TrackPagerActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
    </application>

</manifest>